################################################################################
########################### Variables to change ################################
NAME	=

FLAGS	=	-Wall -Wextra -Werror
fPIC	=	-fPIC

SRC_DIR =
OBJ_DIR =
INC		=
################################################################################

################################################################################
############################### Variables ######################################
##### You don't need to change it.
SRC 	=	$(wildcard $(SRC_DIR)/*.c)
OBJ		=	$(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRC))
################################################################################

################################################################################
################################## Rules #######################################
all: $(NAME)

$(NAME): dynamic

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	gcc -I$(INC) $(FLAGS) $(fPIC) -c $< -o $@

dynamic: check_dir $(OBJ)
	ar -r $(NAME) $(OBJ)
	ranlib $(NAME)

check_dir:
	if [ ! -d $(OBJ_DIR) ]; then mkdir $(OBJ_DIR); fi;

##### Clean rules
clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

##### Re rules
re: fclean all
################################################################################
